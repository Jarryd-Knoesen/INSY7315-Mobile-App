<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorAccent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/title_lease_overview"
                android:textSize="20sp"
                android:textColor="?attr/colorPrimary"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_column_filter_search"
                android:textStyle="italic"
                android:textColor="?attr/colorSecondary"
                android:gravity="center" />

            <EditText
                android:id="@+id/etFilterSearch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:backgroundTint="?attr/colorAccent"
                android:hint="@string/text_filter_search"
                android:inputType="text"
                android:textColor="?attr/colorSecondary"
                android:textColorHint="?attr/colorSecondary" />

            <LinearLayout
                android:id="@+id/tableContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- Table Header -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                android:background="?attr/colorSecondary">

                                <TextView
                                    android:id="@+id/header_status"
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:text="@string/table_header_status"
                                    android:textColor="?attr/colorOnBackground"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/header_id"
                                    android:layout_width="75dp"
                                    android:layout_height="30dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:text="@string/header_unit"
                                    android:textColor="?attr/colorOnBackground"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/header_date"
                                    android:layout_width="125dp"
                                    android:layout_height="30dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:text="@string/header_tenant"
                                    android:textColor="?attr/colorOnBackground"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/header_source"
                                    android:layout_width="125dp"
                                    android:layout_height="30dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:text="@string/header_lease_start"
                                    android:textColor="?attr/colorOnBackground"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/header_property"
                                    android:layout_width="125dp"
                                    android:layout_height="30dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:text="@string/header_lease_end"
                                    android:textColor="?attr/colorOnBackground"
                                    android:gravity="center" />

                                <TextView
                                    android:id="@+id/header_category"
                                    android:layout_width="125dp"
                                    android:layout_height="30dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:text="@string/header_rent_amount"
                                    android:textColor="?attr/colorOnBackground"
                                    android:gravity="center" />

                            </LinearLayout>

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <!-- RecyclerView for rows -->
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/taskLeaseOverviewRecyclerView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent" />

                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
