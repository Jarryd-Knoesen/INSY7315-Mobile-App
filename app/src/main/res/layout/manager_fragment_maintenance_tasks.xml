<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/tasks_title"
                android:textSize="20sp"
                android:gravity="center"/>

            <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap on a column header to sort by that column"
            android:gravity="center"/>

            <EditText
                android:id="@+id/etFilterSearch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Type here to filter and search..." />

            <LinearLayout
                android:id="@+id/tableContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- Table Header -->


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#CCCCCC"
                                android:orientation="horizontal"
                                android:padding="8dp">

                                <TextView
                                    android:id="@+id/unit_header"
                                    android:layout_width="55dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/header_unit" />

                                <TextView
                                    android:id="@+id/status_header"
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/table_header_status" />

                                <TextView
                                    android:id="@+id/reported_date_header"
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:text="Reported Date" />

                                <TextView
                                    android:id="@+id/issue_header"
                                    android:layout_width="125dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/table_header_issue" />

                            </LinearLayout>

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <!-- RecyclerView for rows -->
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/taskManagerMaintenanceTasksRecyclerView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent" />

                                </LinearLayout>
                            </ScrollView>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>